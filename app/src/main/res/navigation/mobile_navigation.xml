    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="jp.sparkworks.restaurant.ui.map.MapFragment"
        android:label="@string/title_map"
        tools:layout="@layout/fragment_map" />

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="jp.sparkworks.restaurant.ui.lottery.LotteryFragment"
        android:label="@string/title_lottery"
        tools:layout="@layout/fragment_lottery" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="jp.sparkworks.restaurant.ui.setting.SettingFragment"
        android:label="@string/title_setting"
        tools:layout="@layout/fragment_setting" />
